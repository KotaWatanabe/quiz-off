<form>
    <div class="card form_card">
    <div class="form">
        <%= form_with(model: [@question,@answer], url: quiz_questions_path, local: true) do |form| %>

        <% if @question.errors.present? %>
            <p class="form-errors">
            <%= @question.errors.full_messages.join(", ") %>
            </p>
        <% end %>
    
        <div class="form-group">
            <%= form.label :body, class:"form-label" %>
            <%= form.text_field :body, class:"form-control"%>
        </div>

        <div class="form-group">
            <%= form.label :answer_body, class:"form-label" %>
            <%= form.text_field :answer_body, class:"form-control body_form" %>
        </div>

        <%= form.submit class: 'btn btn-primary' %>
        <% end %>
    </div>
    </div>
</form> 
