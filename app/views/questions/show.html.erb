<section>
    <p><strong><%= @question.body %></strong></p>
    <%= @question.body %>
</section>

<section>
  <h3>Answers</h3>
  
  <%= form_with(model: @answer,url:answer_quiz_question_path(@quiz,@question), local: true) do |form| %>
    <div class="form-group">
            <%= form.label 'Answer choice', class:"answer-label" %> <br>

             <% @answers.each do |answer| %>

            <div class="custom-control custom-radio ">
                <%= form.radio_button :answer_id, answer.id  %>
                <%= form.label :Answer_choices,  "#{answer.body}", class:"answer-radio" %>
            </div>

             <% end %>
     <%= form.submit "Answer" %>
        </div>

    

    <% end %>

</section>

