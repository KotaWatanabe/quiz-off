<form>
    <div class="form">
        <%= form_with(model: @quiz, local: true) do |form| %>

        <% if @quiz.errors.present? %>
            <p class="form-errors">
            <%= @quiz.errors.full_messages.join(", ") %>
            </p>
        <% end %>

        <div class="form-group">
            <%= form.label :title %>
            <%= form.text_field :title, class:"form-control"%>
        </div>
        <div class="form-group">
            <%= form.label :description %>
            <%= form.text_area :description, class:"form-control" %>
        </div>

        <div class="form-group">
            <%= form.label :level %>
            <%= form.number_field :level, class:"form-control" %>
        </div>

        <div class="form-group col-md-3">
            <%= form.label :points %>
            <%= form.number_field :points, class:"form-control mx-sm-3" %>
        </div>

        <%= form.submit class: 'btn btn-primary' %>
        <% end %>
    </div>
</form> 



