<div class="form-padding">
    <h1>Quizzes</h1>
    <button><%= link_to 'Create Quiz', new_quiz_path %></button>
    <ul>
        <% @quizzes.each do |quiz| %>
            <div class="my-3">
                <div class="card">
                    <div class="card-body card-height">
                        <h4><%= link_to(quiz.title, quiz_path(quiz)) %></h4>
                        <p>
                            <%= pluralize(quiz.points, "point") %>
                        </p>
                        <small>
                            Created <%= time_ago_in_words(quiz.created_at) %> ago
                        </small>
                        <%= 
                            link_to 'Take Quiz', 
                            user_attempts_path(current_user, quiz: quiz), 
                            method: :post
                        %>
                    </div>
                </div>
            </div>
        <% end %>
    </ul>
</div>
